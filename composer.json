{
    "name": "amphp/http-client-guzzle-adapter",
    "homepage": "https://github.com/amphp/http-client-guzzle-adapter",
    "description": "Guzzle adapter for Amp's HTTP client.",
    "keywords": [
        "http",
        "client",
        "http-client",
        "amphp",
        "async",
        "psr7",
        "guzzle",
        "adapter"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Niklas Keller",
            "email": "me@kelunik.com"
        },
        {
            "name": "Aaron Piotrowski",
            "email": "aaron@trowski.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.1",
        "amphp/amp": "^3",
        "amphp/byte-stream": "^2.1",
        "amphp/dns": "^2.2",
        "amphp/http-client": "^5",
        "amphp/http-client-psr7": "^1",
        "amphp/socket": "^2.3",
        "guzzlehttp/guzzle": "^7",
        "guzzlehttp/promises": "^1 || ^2",
        "guzzlehttp/psr7": "^1 || ^2",
        "psr/http-message": "^1.1 || ^2",
        "psr/http-factory-implementation": "^1",
        "revolt/event-loop": "^1",
        "amphp/http-tunnel": "^2.0"
    },
    "require-dev": {
        "amphp/file": "^3.0",
        "amphp/php-cs-fixer-config": "^2",
        "amphp/phpunit-util": "^3",
        "phpunit/phpunit": "^9",
        "psalm/phar": "^5"
    },
    "autoload": {
        "psr-4": {
            "Amp\\Http\\Client\\GuzzleAdapter\\": "src"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Amp\\Http\\Client\\GuzzleAdapter\\": "test"
        }
    }
}
