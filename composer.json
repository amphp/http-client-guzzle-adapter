{
    "name": "amphp/http-client-guzzle-adapter",
    "homepage": "https://github.com/amphp/http-client-guzzle-adapter",
    "description": "Guzzle adapter for Amp's HTTP client.",
    "keywords": [
        "http",
        "client",
        "http-client",
        "amphp",
        "async",
        "psr7"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Niklas Keller",
            "email": "me@kelunik.com"
        },
        {
            "name": "Aaron Piotrowski",
            "email": "aaron@trowski.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": ">=8.1",
        "amphp/amp": "^3",
        "amphp/http-client": "^5",
        "amphp/http-client-psr7": "^1",
        "amphp/http-tunnel": "^2",
        "revolt/event-loop": "^1"
    },
    "require-dev": {
        "amphp/phpunit-util": "^3",
        "amphp/php-cs-fixer-config": "^2",
        "phpunit/phpunit": "^9",
        "laminas/laminas-diactoros": "^2.3",
        "guzzlehttp/guzzle": "^7",
        "psalm/phar": "^5",
        "leproxy/leproxy": "^0.2.2",
        "amphp/file": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Amp\\Http\\Client\\GuzzleAdapter\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Amp\\Http\\Client\\GuzzleAdapter\\": "test"
        }
    }
}
